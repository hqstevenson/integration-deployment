<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
               http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
               http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd"
>

    <cm:property-placeholder persistent-id="XX_EPICadINGNMED_ip" update-strategy="reload"
            placeholder-prefix="$XX{" placeholder-suffix="}">
        <cm:default-properties>
            <cm:property name="affiliate" value="XX default" />
        </cm:default-properties>
    </cm:property-placeholder>

    <service interface="org.osgi.service.blueprint.container.BlueprintListener">
        <bean class="com.pronoia.camel.deployment.services.BlueprintEventListener">
            <property name="bundle" ref="blueprintBundle"/>
            <property name="camelContext" ref="XX_EPICadINGNMED_ip"/>
        </bean>
    </service>

    <bean id="xx-filter-bean" class="com.pronoia.camel.deployment.integrations.impl.EPICadINGNMED_ipFilter" scope="prototype">
        <property name="service" ref="service-one"/>
    </bean>

    <bean id="xx-translation-bean" class="com.pronoia.camel.deployment.integrations.impl.EPICadINGNMED_ipTranslation" scope="prototype">
        <property name="service" ref="service-two"/>
    </bean>

    <bean id="xx-route-builder" class="com.pronoia.camel.deployment.builder.TranslationBuilder" >
        <property name="affiliate" value="$XX{affiliate}" />
        <property name="source" value="timer://XX?period=5000"/>
        <property name="target" value="log:complete?level=INFO" />
        <property name="body" value="XX_EPICadINGNMED_ip" />
        <property name="qualifier" value="true" />
        <property name="filter" ref="xx-filter-bean"/>
        <property name="translation" ref="xx-translation-bean"/>
    </bean>

    <camelContext id="XX_EPICadINGNMED_ip" trace="false" xmlns="http://camel.apache.org/schema/blueprint" >
        <routeBuilder ref="xx-route-builder" />
    </camelContext>

</blueprint>
