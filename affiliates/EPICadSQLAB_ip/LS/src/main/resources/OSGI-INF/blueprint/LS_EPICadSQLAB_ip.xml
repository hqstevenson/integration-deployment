<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
               http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
               http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd"
>

    <cm:property-placeholder persistent-id="LS_EPICadSQLAB_ip" update-strategy="reload"
            placeholder-prefix="$LS{" placeholder-suffix="}">
        <cm:default-properties>
            <cm:property name="affiliate" value="LS default" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="ls-filter-bean" class="com.pronoia.camel.deployment.integrations.impl.EPICadSQLAB_ipFilter" scope="prototype">
        <property name="service">
            <reference interface="com.pronoia.camel.deployment.interfaces.FilterServiceInterface" filter="instance=one" timeout="2000" />
        </property>
    </bean>

    <bean id="ls-translation-bean" class="com.pronoia.camel.deployment.integrations.impl.EPICadSQLAB_ipTranslation" scope="prototype">
        <property name="service">
            <reference interface="com.pronoia.camel.deployment.interfaces.FilterServiceInterface" filter="instance=two" timeout="2000" />
        </property>
    </bean>

    <bean id="ls-route-builder" class="com.pronoia.camel.deployment.builder.TranslationBuilder" >
        <property name="affiliate" value="$LS{affiliate}" />
        <property name="source" value="timer://LS?period=5000"/>
        <property name="target" value="log:complete?level=INFO" />
        <property name="body" value="LS_EPICadSQLAB_ip" />
        <property name="qualifier" value="{{qualifier}}" />
        <property name="filter" value="ls-filter-bean"/>
        <property name="translation" value="ls-translation-bean"/>
    </bean>

    <camelContext id="LS_EPICadSQLAB_ip" trace="false" xmlns="http://camel.apache.org/schema/blueprint" >
        <routeBuilder ref="ls-route-builder" />
    </camelContext>

</blueprint>
